{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "sourceMap": true,
    "mapRoot": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": false,
    "declarationDir": "./dist/types",
    "declaration"   : true,
    "declarationMap": true,
    "lib": [
      "dom",
      "es6"
    ],
  },
  "include": [
    "src/js/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src/js/**/*.test.ts"
  ]
}
